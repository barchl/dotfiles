" colorscheme Tomorrow-Night
set background=dark

set title
set hidden

set number
set ruler
set nocompatible

set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set wrap
set linebreak
set encoding=utf8
syntax on

nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>
nnoremap j gj
nnoremap k gk

" vim powerline bindings
set rtp+=/usr/lib/python3.4/site-packages/powerline/bindings/vim/
set laststatus=2
set t_Co=256
